<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ivaCal">

    <TextView
            android:layout_width="246dp"
            android:layout_height="53dp" android:id="@+id/IVA"
            android:backgroundTint="#97D4DC" android:background="#C1E7EC"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input" android:layout_marginTop="32dp" android:textSize="16sp"/>
    <TextView
            android:layout_width="246dp"
            android:layout_height="53dp" android:id="@+id/precioF"
            android:backgroundTint="#97D4DC" android:background="#C1E7EC"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IVA" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:textSize="16sp"/>
    <TextView
            android:text="Precio del producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/input" app:layout_constraintStart_toStartOf="@+id/input"/>
    <TextView
            android:text="Valor con IVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintBottom_toTopOf="@+id/precioF" app:layout_constraintStart_toStartOf="@+id/precioF"/>
    <TextView
            android:text="IVA del producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/IVA" app:layout_constraintStart_toStartOf="@+id/IVA"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/retM3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/input"
            tools:ignore="SpeakableTextPresentCheck" app:layout_constraintTop_toTopOf="@+id/retM3"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Calcular"
            android:layout_width="243dp"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/calcular"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/precioF" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.47" android:backgroundTint="#4CAF50"/>
    <Button
            android:text="Borrar"
            android:layout_width="243dp"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/delete"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.47" android:backgroundTint="#F44336"
            app:layout_constraintTop_toBottomOf="@+id/calcular" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>