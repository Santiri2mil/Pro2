<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTint="#E3E0E0" android:background="#ECDCDC"
>
    <Button
            android:text="Guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/nota" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/contenido"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493" app:layout_constraintTop_toBottomOf="@+id/nota"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp" android:layout_marginStart="16dp"
            tools:ignore="SpeakableTextPresentCheck" android:backgroundTint="#C5D3DD" android:background="#3F51B5"/>
    <Button
            android:text="<-"
            android:layout_width="75dp"
            android:layout_height="48dp" android:id="@+id/retM1"
            app:layout_constraintTop_toTopOf="@+id/nota" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/nota" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>